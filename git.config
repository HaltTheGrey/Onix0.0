# Local Git Configuration for Onix0.0 Project
# This file contains project-specific Git settings

[core]
    # Ensure consistent line endings
    autocrlf = true
    # Use UTF-8 encoding
    quotepath = false

[branch "main"]
    # Set up main branch tracking
    remote = origin
    merge = refs/heads/main

[user]
    # Project-specific user settings (optional)
    # Uncomment and modify if you want different settings for this project
    # name = "HaltTheGrey"
    # email = "your-project-email@example.com"

[alias]
    # Useful Git aliases for this project
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

[push]
    # Default push behavior
    default = simple

[pull]
    # Default pull behavior
    rebase = false